.xinxi{
  display: flex;
  flex-direction: row;
  justify-content: start;
  align-items: center;
}
.touxiang{
  width: 150rpx;
  height: 150rpx;
  margin-top: 8rpx;
  border-radius: 50%;
  border-color: black;
  display: flex;
}
.guanzhu{
margin: 0;
padding: 0;
width: 125rpx!important;
height: 50rpx!important;
font-size: 30rpx;
background-color: rgb(61,187,236);
color: white;
float: left;
left: 100rpx;
margin-top: 8rpx;
}
.guanzhu-hover{
  background-color: gray;
  color: white;
} 

.mingzi{
  height: 150rpx;
  line-height: 150rpx;
  font-size: 50rpx;
  color: gray;
  margin-top: 8rpx;
}

.fensi{
  height: 70rpx;
  line-height: 70rpx;
  float: right;
  font-size: 28rpx;
  text-align: center;
  color: #666;
  background-color: #fff;
  border-radius: 10rpx;
  margin: 20rpx;
}

.jianjie{
  font-size: 30rpx;
  height: 120rpx;
  margin: 5rpx;
  padding: 5rpx;
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:3;
}
.xiangxi{
  font-size: 30rpx;
  margin: 5rpx;
  padding: 5rpx;
}
.wenzhang{
  float: left;
  width: 730rpx;
  height:180rpx;
  /* border: solid 7.5rpx rgb(229, 229, 229); */
  border-radius: 10rpx;
  position: relative;
  margin-bottom:25rpx;
  margin-left: 11rpx;
  box-shadow: 0rpx 10rpx 50rpx 10rpx rgba(176, 176, 176, 0.5);
}
.title{
  margin-top: 10rpx;
  height: 38rpx;
  font-size: 45rpx;
  font-weight: bold;
  line-height: 45rpx;
  padding:5rpx;
  margin-left: 5rpx;
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:1;
}
.content{
  margin-top: 10rpx;
  width:100%;
  height: 120rpx;
  font-size: 28rpx;
  /* margin-left: 5rpx; */
