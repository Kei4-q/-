  </view>
  <button class="btnChange" type="primary" form-type="submit" bindtap="gerenClick" style="margin-bottom:20rpx;background-color: rgb(65, 146, 221);">登录</button>
  <button  type="primary" form-type="submit" bindtap="zhuceClick" style="background-color: rgb(65, 146, 221);">注册</button>
</view>