<view style="padding:9rpx;">
  <view class="xinxi">
    <image class="tubiao" src="../../images/user.png" mode="aspectFill"></image>
  </view>
  <view class="biankuang">
    <!-- <view>帐号：</view> -->
    <image class="xiaotubiao" src="../../images/user1.png" mode="aspectFill"></image>
    <input class="username shurukuang" bindinput='input_username' placeholder="请输入用户名"  />
  </view>
  <view class="biankuang">
    <!-- <view>密码：</view> -->
    <image class="xiaotubiao" src="../../images/password.png" mode="aspectFill"></image>
