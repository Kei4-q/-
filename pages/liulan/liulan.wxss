.liulan{
  width: 730rpx;
  height: 150rpx;
  font-size: 75rpx;
  text-align: center;
  margin-bottom: 50rpx;
  color: #fff;
  line-height: 150rpx;
  background-color: rgb(59, 154, 218);
  border-radius: 30rpx;
}


.xinwen{
  width: 730rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
  border-radius: 10rpx;
  box-shadow: 0rpx 10rpx 50rpx 10rpx rgba(176, 176, 176, 0.5);
}
.xinwen .touxiang{
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  padding-left: 0;
}
.xinwen text,.xinwen view{
  position: absolute;

}
.xinwen .zuozhe{
  width: 100%;
  height: 50rpx;
  font-size: 25rpx;
  padding-left: 60rpx;
  line-height: 50rpx;


}
.xinwen .neirong{
  width: 715rpx;
  font-size: 40rpx;
  padding-top: 60rpx;
}