.search{
  width: 600rpx;
  height: 80rpx;
  background-color: #eee;
  margin:10rpx 10rpx;
  line-height: 80rpx;
  border-radius: 30rpx;
  float: left;
}
.tubiao{
  width: 60rpx;
  height: 60rpx;
  float: left;
  margin-top: 10rpx;
  margin-left: 10rpx;
}
.search-top{
  margin:10rpx 0rpx;
  height: 60rpx;
  width: 450rpx;
  line-height: 80rpx;
  float: left;

}
.cancel{
  float: left;
  width: 100rpx;
  height: 60rpx;
  margin-left: 20rpx;
  margin-top: 28rpx;
}
.history{
  width: 720rpx;
  margin: 10rpx auto;
  padding: 0 10rpx;
}
.history-top{
  float: left;
  width: 730rpx;
  height: 50rpx;
  margin-top: 25rpx;
}
.hisicon{
  width: 50rpx;
  height: 50rpx;
  float: left;
  margin-right: 10rpx;
}
.wenzi{
  height: 50rpx;
  width: 300rpx;
  line-height: 50rpx;
  font-weight: bold;
  float: left;
  color: #666;
}
.hisbin{
  width: 30rpx;
  height: 30rpx;
  float: left;
  margin-left: 300rpx;
  margin-top: 10rpx;
}
.history-content{
  float: left;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 30rpx;
  font-family: "黑体";
  width: auto;
  background-color: #ddd;
  padding: 5rpx 20rpx;
  margin-top:10rpx ;
  margin-left: 5rpx;
  margin-right: 5rpx;
  border-radius: 20rpx;
  margin-bottom:20rpx ;
}
.xinwen {
  float: left;
  margin:0rpx 10rpx;
  width: 732rpx;
  height:220rpx;
  /* border: solid 7.5rpx rgb(229, 229, 229); */
  border-radius: 10rpx;
  position: relative;
  margin-bottom:25rpx;
  box-shadow: 0rpx 10rpx 50rpx 10rpx rgba(176, 176, 176, 0.5);
}
.top{
  display: flex;
  flex-direction: row;
  justify-content: start;
  align-items: center;
}

.xinwen .top .touxiang{
  width: 50rpx;
  height: 50rpx;
  padding-top:3rpx;
  border-radius: 50%;
}

.xinwen .top .zuozhe{
  width: 200rpx;
  height: 50rpx;
  font-size: 25rpx;
  padding-left: 10rpx;
  padding-top: 10rpx;
  line-height: 50rpx;
}
